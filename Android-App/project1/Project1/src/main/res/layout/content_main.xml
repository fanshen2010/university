<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fansh.calculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/screen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0.00"
        android:textSize="50dp"
        android:gravity="bottom|right"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="MRC"
        android:id="@+id/button"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickMRC"
        android:layout_below="@+id/screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="M+"
        android:id="@+id/button2"
        android:background="@drawable/buttonstyle"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textSize="30dp"
        android:onClick="onClickMemoryAdd" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="M-"
        android:id="@+id/button3"
        android:background="@drawable/buttonstyle"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="30dp"
        android:onClick="onClickMemoryMinus" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="AC"
        android:id="@+id/button4"
        android:background="@drawable/buttonstyle"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:textSize="30dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="√"
        android:id="@+id/button5"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:onClick="onClickSqrt" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="%"
        android:id="@+id/button6"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:textSize="30dp"
        android:onClick="onClickPercent" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="×"
        android:id="@+id/button7"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:textSize="30dp"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="÷"
        android:id="@+id/button8"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:textSize="30dp"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="7"
        android:id="@+id/button9"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="8"
        android:id="@+id/button10"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="9"
        android:id="@+id/button11"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="+"
        android:id="@+id/button12"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:textSize="30dp"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="4"
        android:id="@+id/button13"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="5"
        android:id="@+id/button14"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button10"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="6"
        android:id="@+id/button15"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button11"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:textSize="30dp"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="-"
        android:id="@+id/button16"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/button12"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:textSize="30dp"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="1"
        android:id="@+id/button17"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/button20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="2"
        android:id="@+id/button18"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/button17"
        android:layout_toRightOf="@+id/button17"
        android:layout_toEndOf="@+id/button17" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="3"
        android:id="@+id/button19"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/button18"
        android:layout_toRightOf="@+id/button18"
        android:layout_toEndOf="@+id/button18" />

    <Button
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:text="="
        android:id="@+id/button20"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickEqual"
        android:layout_below="@+id/button15"
        android:layout_toRightOf="@+id/button15"
        android:layout_toEndOf="@+id/button15" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="C"
        android:id="@+id/button21"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickClear"
        android:layout_below="@+id/button17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/button22"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/button21"
        android:layout_toRightOf="@+id/button21"
        android:layout_toEndOf="@+id/button21" />


    <Button
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="."
        android:id="@+id/button23"
        android:background="@drawable/buttonstyle"
        android:textSize="30dp"
        android:onClick="onClickPoint"
        android:layout_alignTop="@+id/button22"
        android:layout_toRightOf="@+id/button22"
        android:layout_toEndOf="@+id/button22" />

</RelativeLayout>
